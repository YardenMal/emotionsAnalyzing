MDBoxLayout:
    orientation : 'vertical'
    Image :
        source : "whitelogo.png"
        #opacity : .9
        pos_hint: {"center_x": .5, "center_y": .2}
        size_hint : .59,.59
    MDGridLayout:
        cols : 1
        padding : 150, 0,150,10
        spacing : 10
        pos_hint : {"center_x":.5,"center_y":.5}
        MDCard:
            #size_hint: None, None
            #size: "280dp", "180dp"
            pos_hint: {"center_x": .5, "center_y": .5}
            radius: [20,]
            elevation : 30
            opacity : .9
            MDBoxLayout:
                orientation : 'vertical'
                padding :10,10,10,70
                spacing : 10
                MDTextField :
                    id : email
                    hint_text : "Enter Email "
                    helper_text_mode : "on_focus"
                    icon_right : "account"
                    icon_right_color : app.theme_cls.primary_color
                    pos_hint : {'center_x': 0.5, 'center_y': 0.7}
                    required: True
                    size_hint_x: None
                    width : 250

                MDTextField :
                    id : userName
                    hint_text : "User name"
                    helper_text_mode : "on_focus"
                    icon_right : "account"
                    icon_right_color : app.theme_cls.primary_color
                    pos_hint : {'center_x': 0.5, 'center_y': 0.5}
                    required: True
                    size_hint_x: None
                    width : 250

                MDTextField :
                    id : Age
                    hint_text : "Age"
                    helper_text:'Hint : 16+'
                    helper_text_mode : "on_focus"
                    icon_right : "account"
                    icon_right_color : app.theme_cls.primary_color
                    pos_hint : {'center_x': 0.5, 'center_y': 0.8}
                    required: True
                    size_hint_x: None
                    width : 250

                MDTextField :
                    id : password
                    hint_text : "Password"
                    helper_text:'Hint : 8 tabs including numbers'
                    helper_text_mode : "on_focus"
                    icon_right : "eye-off"
                    password : True
                    icon_right_color : app.theme_cls.primary_color
                    pos_hint : {'center_x': 0.5, 'center_y': 1}
                    required: True
                    size_hint_x: None
                    width : 250

                MDTextField :
                    id : password2
                    hint_text : "Verify Password"
                    helper_text_mode : "on_focus"
                    icon_right : "eye-off"
                    password : True
                    icon_right_color : app.theme_cls.primary_color
                    pos_hint : {'center_x': 0.5, 'center_y': 1}
                    required: True
                    size_hint_x: None
                    width : 250

                MDRoundFlatButton :
                    text : "Create new account"
                    pos_hint : {'center_x': 0.5, 'center_y': 6}
                    on_press : app.post()
                    on_release: Snackbar(text="news is poated").open()